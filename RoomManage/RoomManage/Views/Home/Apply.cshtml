@model RoomManage.Models.ApplyForBarrennes

@{
    ViewBag.Title = RoomManage.Resources.BarrennessController.ApplyForBarrennes;
}

<h2>@RoomManage.Resources.BarrennessController.ApplyMessage </h2>
@{ 
    if (ViewBag.Result != null) {
        <h3>@ViewBag.Result</h3>
    }
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Message",null, new { @class = "form-control"  })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@RoomManage.Resources.BarrennessController.Confirm " class="btn btn-info" />
            </div>
        </div>
    </div>
}

