
@{
    ViewBag.Title = RoomManage.Resources.BarrennessController.SearchBarrennes;
}

<h4>@RoomManage.Resources.BarrennessController.AddCommentWellcomMessage</h4>
@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <div class="form-group">
        @Html.Label(RoomManage.Resources.BarrennessController.SelectBarrennes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control", @id = "Category_Id" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(RoomManage.Resources.BarrennessController.SelectState, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("State", null, htmlAttributes: new { @class = "form-control", @id = "state_search" })
        </div>
    </div>
</div>
}
<div class="searchResult"></div>

