@model IEnumerable<RoomManage.Models.Category>

@{
    ViewBag.Title = RoomManage.Resources.CategoryController.BarrennesCategory;
}

<h2>@RoomManage.Resources.CategoryController.BarrennesCategory</h2>

<p>
    @Html.ActionLink(RoomManage.Resources.CategoryController.addNewCategory, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName(RoomManage.Resources.CategoryController.CategoryTitle)
        </th>
        <th>
            @Html.DisplayName(RoomManage.Resources.CategoryController.CategoryDescrption)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CstegoryDescrption)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="..." >
                    @Html.ActionLink(RoomManage.Resources.actointext.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) 
                    @Html.ActionLink(RoomManage.Resources.actointext.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink(RoomManage.Resources.actointext.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    
                </div>
            </td>
        </tr>
    }

</table>
