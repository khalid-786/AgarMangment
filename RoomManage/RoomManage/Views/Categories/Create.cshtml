@model RoomManage.Models.Category

@{
    ViewBag.Title = RoomManage.Resources.CategoryController.addNewCategory;
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@RoomManage.Resources.CategoryController.addNewCategory</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label( RoomManage.Resources.CategoryController.CategoryTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryTitle ,RoomManage.Resources.CategoryController.CategoryTitleErrorMessage, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label( RoomManage.Resources.CategoryController.CategoryDescrption, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CstegoryDescrption, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CstegoryDescrption , RoomManage.Resources.CategoryController.CategoryDescrptionErrorMessage, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@RoomManage.Resources.actointext.Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(RoomManage.Resources.actointext.GoToList, "Index", null, new { @class = "btn btn-primary" })
</div>
