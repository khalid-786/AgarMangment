@using Microsoft.AspNet.Identity
@using RoomManage.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title- @RoomManage.Resources.HomeTexts.appname</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/css/@RoomManage.Resources.HomeTexts.bootstraplibcss" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/@RoomManage.Resources.HomeTexts.style" rel="stylesheet" />
    <link href="~/css/media.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(RoomManage.Resources.HomeTexts.appname, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.About, "About", "Home")</li>
                    <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.contactus, "Contact", "Home")</li>
                    <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.search, "search", "Home")</li>
                    <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.addcomment, "comment", "Home", new { }, new { @class = "" })</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@RoomManage.Resources.HomeTexts.Language<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.English, "changeLanguage" , "Home", new { languageAbberation = "en" }, new { @class = "" })</li>
                            <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.Arabic, "changeLanguage", "Home", new { languageAbberation = "ar" }, new { @class = "" })</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
        <footer class="myfooter  text-right">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h3>  @RoomManage.Resources.HomeTexts.aboutus ؟ <i class="fa fa-home"></i></h3>
                        <p>
                            @RoomManage.Resources.HomeTexts.aboutwepsite
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h3>@RoomManage.Resources.HomeTexts.links <i class="glyphicon glyphicon-info-sign"></i></h3>
                        <ul class="list-unstyled">
                            <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.addcomment, "comment", "Home", new { }, new { @class = "btn btn-success btn-block" })</li>
                            @{

                                var db = new ApplicationDbContext();

                                var category = db.Categories.ToList();
                                foreach (var cat in category)
                                {
                                    <li>@Html.ActionLink(cat.CategoryTitle, "getBarrennesByCategory", "Home", new { Id= cat.Id }, new { @class = "" })</li>
                                    
                                }
                            }
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h3>@RoomManage.Resources.HomeTexts.contactus  <i class="glyphicon glyphicon-phone-alt"></i></h3>
                        <ul class="list-unstyled">
                            

                            <li><a href="#"><i class="fa fa-facebook"></i>@RoomManage.Resources.HomeTexts.facebook</a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i> @RoomManage.Resources.HomeTexts.twiter  </a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i> @RoomManage.Resources.HomeTexts.whatsapp </a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i>@RoomManage.Resources.HomeTexts.youtube</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@RoomManage.Resources.HomeTexts.Language<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.English, "changeLanguage", "Home", new { languageAbberation = "en" }, new { @class = "" })</li>
                                    <li>@Html.ActionLink(RoomManage.Resources.HomeTexts.Arabic, "changeLanguage", "Home", new { languageAbberation = "ar" }, new { @class = "" })</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="subfooter text-center">
                    <p>@RoomManage.Resources.HomeTexts.publishrules &copy; 2019/9/10</p>
                </div>
            </div>
        </footer>
   
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/@RoomManage.Resources.HomeTexts.bootstraplib"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/frontend.js"> </script>
    @RenderSection("scripts", required: false)
   
</body>
</html>
